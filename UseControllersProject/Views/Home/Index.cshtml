@using UseControllersProject.Models;
@addTagHelper *, UseMVCProject
@await Component.InvokeAsync("Timer")
@model IEnumerable<Person>

<h2>People</h2>
<table class="table">
    <tr><td>Id</td><td>Name</td><td>Age</td></tr>
    @foreach (var p in Model)
    {
        <tr><td>@p.Id</td><td>@p.Name</td><td>@p.Age</td><td><vc:timer></vc:timer></td></tr>
    }
</table>